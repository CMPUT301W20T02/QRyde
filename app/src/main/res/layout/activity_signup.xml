<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/background"
        android:layout_width="637dp"
        android:layout_height="812dp"
        android:alpha="0.3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.712"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.512"
        app:srcCompat="@drawable/newyorkatnight" />

    <ImageView
        android:id="@+id/nameBox"
        android:layout_width="323dp"
        android:layout_height="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        app:srcCompat="@drawable/rounded_rectangle" />

    <EditText
        android:id="@+id/name_edittext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="@null"
        android:ems="10"
        android:hint="Full Name"
        android:inputType="textPersonName"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/nameBox"
        app:layout_constraintEnd_toEndOf="@+id/nameBox"
        app:layout_constraintStart_toEndOf="@+id/nameLogo"
        app:layout_constraintTop_toTopOf="@+id/nameBox" />

    <ImageView
        android:id="@+id/nameLogo"
        android:layout_width="27dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/nameBox"
        app:layout_constraintStart_toStartOf="@+id/nameBox"
        app:layout_constraintTop_toTopOf="@+id/nameBox"
        app:srcCompat="@drawable/name" />

    <ImageView
        android:id="@+id/phoneBox"
        android:layout_width="323dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameBox"
        app:srcCompat="@drawable/rounded_rectangle" />

    <ImageView
        android:id="@+id/phoneLogo"
        android:layout_width="27dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/phoneBox"
        app:layout_constraintStart_toStartOf="@+id/phoneBox"
        app:layout_constraintTop_toTopOf="@+id/phoneBox"
        app:srcCompat="@drawable/phone" />

    <EditText
        android:id="@+id/phone_edittext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="@null"
        android:ems="10"
        android:hint="Phone Number"
        android:inputType="textPersonName"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/phoneBox"
        app:layout_constraintEnd_toEndOf="@+id/phoneBox"
        app:layout_constraintStart_toEndOf="@+id/phoneLogo"
        app:layout_constraintTop_toTopOf="@+id/phoneBox" />

    <ImageView
        android:id="@+id/emailBox"
        android:layout_width="323dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usernameBox"
        app:srcCompat="@drawable/rounded_rectangle" />

    <ImageView
        android:id="@+id/emailLogo"
        android:layout_width="27dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/emailBox"
        app:layout_constraintStart_toStartOf="@+id/emailBox"
        app:layout_constraintTop_toTopOf="@+id/emailBox"
        app:srcCompat="@drawable/email_icon" />

    <ImageView
        android:id="@+id/usernameBox"
        android:layout_width="323dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phoneBox"
        app:srcCompat="@drawable/rounded_rectangle" />

    <EditText
        android:id="@+id/username_edittext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:background="@null"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/usernameBox"
        app:layout_constraintEnd_toEndOf="@+id/usernameBox"
        app:layout_constraintStart_toEndOf="@+id/usernameLogo"
        app:layout_constraintTop_toTopOf="@+id/usernameBox" />

    <EditText
        android:id="@+id/email_edittext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="@null"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/emailBox"
        app:layout_constraintEnd_toEndOf="@+id/emailBox"
        app:layout_constraintStart_toEndOf="@+id/emailLogo"
        app:layout_constraintTop_toTopOf="@+id/emailBox" />

    <ImageView
        android:id="@+id/passwordBox"
        android:layout_width="323dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailBox"
        app:srcCompat="@drawable/rounded_rectangle" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="308dp"
        android:layout_height="150dp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/qryde_logo" />

    <ImageView
        android:id="@+id/usernameLogo"
        android:layout_width="27dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/usernameBox"
        app:layout_constraintStart_toStartOf="@+id/usernameBox"
        app:layout_constraintTop_toTopOf="@+id/usernameBox"
        app:srcCompat="@drawable/username_logo" />

    <ImageView
        android:id="@+id/passwordLogo"
        android:layout_width="27dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/passwordBox"
        app:layout_constraintStart_toStartOf="@+id/passwordBox"
        app:layout_constraintTop_toTopOf="@+id/passwordBox"
        app:srcCompat="@drawable/password_logo" />

    <Button
        android:id="@+id/signup_button"
        android:layout_width="133dp"
        android:layout_height="35dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_rectangle_blue"
        android:text="Signup"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/password_edittext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:background="@null"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Password"
        app:layout_constraintBottom_toBottomOf="@+id/passwordBox"
        app:layout_constraintEnd_toEndOf="@+id/passwordBox"
        app:layout_constraintStart_toEndOf="@+id/passwordLogo"
        app:layout_constraintTop_toTopOf="@+id/passwordBox" />

    <ImageView
        android:id="@+id/reenterPasswordBox"
        android:layout_width="323dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordBox"
        app:srcCompat="@drawable/rounded_rectangle" />

    <ImageView
        android:id="@+id/reenterPasswordLogo"
        android:layout_width="27dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/reenterPasswordBox"
        app:layout_constraintStart_toStartOf="@+id/reenterPasswordBox"
        app:layout_constraintTop_toTopOf="@+id/reenterPasswordBox"
        app:srcCompat="@drawable/password_logo" />

    <EditText
        android:id="@+id/reenterPassword_edittext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="@null"
        android:ems="10"
        android:hint="Re-enter Password"
        android:inputType="textPersonName"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/reenterPasswordBox"
        app:layout_constraintEnd_toEndOf="@+id/reenterPasswordBox"
        app:layout_constraintStart_toEndOf="@+id/reenterPasswordLogo"
        app:layout_constraintTop_toTopOf="@+id/reenterPasswordBox" />

    <TextView
        android:id="@+id/incorrect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="#F44336"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reenterPasswordBox" />

    <Switch
        android:id="@+id/userType"
        android:layout_width="109dp"
        android:layout_height="37dp"
        android:text="Driver"
        app:layout_constraintStart_toStartOf="@+id/reenterPasswordBox"
        app:layout_constraintTop_toBottomOf="@+id/reenterPasswordBox" />

</androidx.constraintlayout.widget.ConstraintLayout>